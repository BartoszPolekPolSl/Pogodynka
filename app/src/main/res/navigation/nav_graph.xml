<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.pogodynka.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
        <action
            android:id="@+id/action_mainFragment_to_weatherFragmentSenior"
            app:destination="@id/weatherFragmentSenior" />
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.pogodynka.fragments.WeatherFragment"
        android:label="WeatherFragment" >
        <argument
            android:name="weatherApiResponse"
            app:argType="com.example.pogodynka.data.model.WeatherApiResponse" />
    </fragment>
    <fragment
        android:id="@+id/weatherFragmentSenior"
        android:name="com.example.pogodynka.fragments.WeatherFragmentSenior"
        android:label="WeatherFragmentSenior" >
        <argument
            android:name="weatherApiResponse"
            app:argType="com.example.pogodynka.data.model.WeatherApiResponse" />
    </fragment>
</navigation>